<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".NotesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp">

    </RelativeLayout>

    <TextView
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:text="Create New Event "
        android:textColor="#191919"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_tittle"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:hint="Enter topic of the event"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_notes"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:hint=" Enter new event here\n Date:\n Time:\n Location:"
        android:padding="9dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColorHint="#797979"/>

    <ImageView
        android:id="@+id/image_view_save"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginStart="270dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        android:src="@drawable/saving" />

</LinearLayout>