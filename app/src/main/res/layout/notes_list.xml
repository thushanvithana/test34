<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/notes_card_container"
    app:cardCornerRadius="9dp"
    app:cardElevation="9dp"
    android:layout_margin="9dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tittle_text"
                android:text="Enter topic of the event"
                android:layout_alignParentStart="true"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="9dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                />

            <ImageView
                android:id="@+id/image_view_pin"
                android:layout_width="74dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_notes"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:maxLines="10"
            android:padding="8dp"
            android:text=" Enter new event here\n Date\n Time\n Location"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_date"
            android:text="Date."
            android:textColor="#242B2E"
            android:textSize="17sp"
            android:textStyle="normal"
            android:maxLines="10"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:padding="8dp"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>